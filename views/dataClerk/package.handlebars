
<div class="col-md-12">
   <h2>{{package.name}}</h2>
</div>

<div class="container">
    <form method="POST" action="/dataClerk/package/update/{{package.packageID}}">
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label for="packageID">Package ID:</label>
                    <input class="form-control" id="packageID" name="packageID" type="text" value="{{package.packageID}}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="name">Meal Package Name:</label>
                    <input class="form-control" id="packageName" name="name" type="text" value="{{package.name}}" />
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="price">Meal Package Price:</label>
                    <input class="form-control" id="pakagePrice" name="price" type="text" value="{{package.price}}"/>
                </div>
            </div>    
        </div>

                    
        <div class="row">
            <div class="col-md-7">
                <div class="form-group">
                    <label for="description">Meal Package Description:</label>
                    <textarea class="form-control" id="pakageDescription" name="description" type="text">{{package.description}}</textarea>
                </div>
            </div>
        </div>

                    
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="category">Category:</label>
                    <input class="form-control" id="foodCategory" name="category" type="text" value="{{package.category}}"/>
                </div>
            </div>
       
            <div class="col-md-2">
                <div class="form-group">
                    <label for="meals">Number of Meals:</label>
                    <input class="form-control" id="numOfMeals" name="meals" type="text" value="{{package.meals}}"/>
                </div>
            </div>
        </div>
                    
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="topMeal">Is this package{{#if package.topMeal}} not{{/if}} a top package?:</label>
                    <input class="form-control" type="checkbox" name="topMeal"  {{#if package.topMeal}}value="false" {{else}} value="true"{{/if}}>                                          
                </div>
            </div>
        </div>

        <input type="submit" class="btn btn-dark" value="Update Package">

    </form>

</div>
