<div class="container">

    <div class="row">
        <div class="col-md-6">
            <div class="image">
                <img src="/img/{{package.image}}" width="400">
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{package.name}}</h1>
                    <hr />
                </div>


                <div class="col-md-12">

                    <h2>${{package.price}}</h2>


                </div>
                {{#if session.user}}
                <div class="form">
                    <form action="/user/addProduct" method="POST" id="addPackage">

                        <div class="form-group">
                            <label for="packageID">Product ID:</label>
                            <input class="form-control" id="packageID" name="packageID" type="text"
                                value="{{package.packageID}}" readonly="readonly">
                        </div>

                        <div class="form-group">
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" min="1" max="100" maxlength="4">
                        </div>
                        <input type="submit" class="btn btn-dark" value="Add to Cart">
                    </form>
                </div>
                {{/if}}

                <div class="col-md-12 description">
                    <p>{{package.description}}<br><br>No. of meals: {{package.meals}}</p>
                </div>
            </div>
        </div>
    </div>

</div>