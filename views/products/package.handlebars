<div class="hero">
    <div class="hero-text">
    <h1>{{hero}}</h1>
    </div>
</div>
<h2>Pick a package, choose your meals, achieve your goal - it's that easy!</h2>
    
    <div class="container">
        <div class="row">
        
            {{#each packages}}

            <div class="col-lg-3 col-md-6">
                <div class="image">
                    <img src={{this.img}} width="200"> 
                </div>
                <div class="description">
                    <h3>{{this.name}}</h3>
                    <p>
                        {{this.desc}}<br>
                        ${{this.price}}
                    </p>
                </div>
            </div>
            {{/each}}
        </div>        
    </div>